<?xml version="1.0" encoding="utf-8"?>
<install type="component"
         version="1.5"
         method="upgrade">
	<name>Page Code Manager</name>
	<version>1.01</version>
	<description>Description of the component ...</description>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
		</sql>
	</uninstall>

	<administration>
		<!-- Administration Menu Section -->
		<menu>Page Code Manager</menu>
		<submenu>
			<menu link="option=com_pagecodemanager">Pages</menu>
			<menu link="option=com_pagecodemanager&amp;controller=pagecode&amp;task=edit">Add Page</menu>
			<menu link="option=com_pagecodemanager&amp;controller=pagecodetypes">Codes</menu>
			<menu link="option=com_pagecodemanager&amp;controller=pagecodetype&amp;task=edit">Add Code</menu>
		</submenu>

		<!-- Administration Main File Copy Section -->
		<files folder="admin">
			<filename>controller.php</filename>
			<filename>pagecodemanager.php</filename>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
			<filename>controllers/pagecode.php</filename>
			<filename>controllers/pagecodetype.php</filename>
			<filename>controllers/pagecodetypes.php</filename>
			<filename>models/pagecode.php</filename>
			<filename>models/pagecodes.php</filename>
			<filename>models/pagecodetype.php</filename>
			<filename>models/pagecodetypes.php</filename>
			<filename>tables/pagecode.php</filename>
			<filename>tables/pagecodetype.php</filename>
			<filename>views/pagecode/view.html.php</filename>
			<filename>views/pagecode/tmpl/form.php</filename>
			<filename>views/pagecodes/view.html.php</filename>
			<filename>views/pagecodes/tmpl/default.php</filename>
			<filename>views/pagecodetype/view.html.php</filename>
			<filename>views/pagecodetype/tmpl/form.php</filename>
			<filename>views/pagecodetypes/view.html.php</filename>
			<filename>views/pagecodetypes/tmpl/default.php</filename>
		</files>

	</administration>
</install>